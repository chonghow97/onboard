{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "app-graphql": ["./graphql/index"],
      "components": ["./app/components"],
      "components/*": ["./app/components/*"],
      "containers": ["./app/containers"],
      "i18n": ["./app/i18n"],
      "assets/*": ["assets/*"],
      "config/*": ["./app/config/*"],
      "utils/*": ["./app/utils/*"],
      "models": ["./app/models"],
      "models/*": ["./app/models/*"],
      "screens": ["./app/screens"],
      "screens/*": ["./app/screens/*"],
      "theme": ["./app/theme"],
      "graphqloperations": ["./graphql/operations"],
      "tailwind": ["./tailwind.js"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "index.js",
    "app",
    "test",
    "storybook",
    "babel.config.js",
    "env.d.ts",
    "ignite",
    "tailwind.js"
  ]
}
